<style>
    /* Thiết lập màu chữ và hiệu ứng */
    .text-white-hover:hover {
        color: #fff !important;
    }

    .text-light {
        color: #f8f9fa !important; /* Màu trắng sáng */
        opacity: 0.9;
    }

    .text-white {
        color: #fff !important;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }

    /* Hiệu ứng hover cho toàn bộ khối */
    .col-md-4:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    /* Hiệu ứng nhấp nháy khi mới đăng nhập */
    .pulse-on-login {
        animation: pulse 2s infinite;
        filter: drop-shadow(0 0 4px rgba(255,255,255,0.7));
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }
    }
</style>



